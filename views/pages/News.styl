@require 'reset.styl'

.News {
  font-family: Helvetica, sans-serif;
  font-weight: 300;

  &Header {
    position: relative;
    z-index: 1;

    &Bg {
      width: 100%;
      height: 700px;
      background-size: cover;
      background-position: 50% 0;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
    }

    &Title {
      padding: 40px;
      font-size: 28px;
      color: #fbf5f1;
    }
  }
}