.Input {
  margin: 0 0 16px;

  &Field {
    width: 100%;
    height: 46px;
    padding: 8px;
    box-sizing: border-box;
    border-radius: 5px;
    border: 1px solid #eee;
    font-size: 14px;
    font-weight: 300;
  }

  &Error {
    font-size: 12px;
    background: #da532c;
    padding: 8px 16px;
    position: absolute;
    color: #fff;
    margin: -38px 0px;

    &:after {
      content: '';
      width: 0;
      height: 0;
      border-left: 4px solid transparent;
      border-right: 4px solid transparent;
      border-top: 4px solid #da532c;
      position: absolute;
      bottom: -4px;
      left: 10px;
    }
  }

  &Label {
    margin: 0 0 8px;
  }
}
